@model GroceryList.Models.GroceryItem
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Add Grocery Item";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
                <form method="post" action="create">
                    <div class="form-group">
                        <label class="form-group">Item Name:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StoreId">Store Name:</label>
                        
                        <select asp-for="StoreId" class="form-control" />
                            @foreach(var store in ViewBag.AvailableStores)
                            {
                                <option value="@store.Id">@store.Name</option>

                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info">Add item</button>
                </form>
        </div>
    </div>
</div>
